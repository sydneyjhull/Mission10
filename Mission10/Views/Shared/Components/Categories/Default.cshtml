@{
}

@model IEnumerable<string>

<div class="d-grid">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" 
       asp-route-pageNum ="1"
       class="btn btn-outline-secondary">Home</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c" asp-route-pageNum="1"
           class="btn @(ViewBag.Selected == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
</div>